			<Item>
				<Name>Browsing history</Name>
				<Objects>
					<Object>
						<Type>File</Type>
						<Command>FillAndDelete</Command>
						
						<Path>
							<OS name="XP">
								<Location>%USERPROFILE%\Application Data\Mozilla\Firefox\Profiles\%FILLPATH%</Location>
								<Patterns>
									<Pattern>places.sqlite</Pattern>
								</Patterns>
							</OS>
							
							<OS name="SEVEN">
								<Location>%USERPROFILE%\AppData\Roaming\Mozilla\Firefox\Profiles\%FILLPATH%</Location>
								<Patterns>
									<Pattern>places.sqlite</Pattern>
								</Patterns>
							</OS>
						</Path>
					</Object>
				</Objects>				
			</Item>
			
