<CoEIA-Plugins>
<Metadata>
<Plugin-Name>MIRC</Plugin-Name>
<Plugin-Category>Chat and Instant Messaging History</Plugin-Category>
<Plugin-Version>1.0</Plugin-Version>
</Metadata>
<Data>
<Items>
<Item>
<Name>MIRC Downloaded Files</Name> 
<Objects>
<Object>
<Type>Folder</Type>
<Command>DeleteAllBellow</Command>
<Path>
<OS name="ALL">
<Location>%SystemDrive%</Location>
<Patterns>
<Pattern>*.*</Pattern>
</Patterns>
</OS>
</Path>
</Object>

<Object>
<Type>Folder</Type>
<Command>DeleteAllBellow</Command>
<Path>
<OS name="ALL">
<Location>%ProgramFiles%\mirc\logs</Location>
<Patterns>
<Pattern>*.*</Pattern>
</Patterns>
</OS>
</Path>
</Object>

<Object>
<Type>File</Type>
<Command>EraseMatch</Command>
<Path>
<OS name="ALL">
<Location>%ProgramFiles%\mirc\mirc.ini</Location>
<Patterns>
<Pattern>[dirs]->senddir</Pattern>
</Patterns>
</OS>
</Path>
</Object>

<Object>
<Type>File</Type>
<Command>EraseMatch</Command>
<Path>
<OS name="ALL">
<Location>%ProgramFiles%\mirc\mirc.ini</Location>
<Patterns>
<Pattern>[nicklist]->#</Pattern>
</Patterns>
</OS>
</Path>
</Object>

<Object>
<Type>File</Type>
<Command>EraseMatch</Command>
<Path>
<OS name="ALL">
<Location>%ProgramFiles%\mirc\mirc.ini</Location>
<Patterns>
<Pattern>[local]->lo</Pattern>
</Patterns>
</OS>
</Path>
</Object>

<Object>
<Type>File</Type>
<Command>EraseMatch</Command>
<Path>
<OS name="ALL">
<Location>%ProgramFiles%\mirc\mirc.ini</Location>
<Patterns>
<Pattern>[findtext]->n</Pattern>
</Patterns>
</OS>
</Path>
</Object>

<Object>
<Type>File</Type>
<Command>EraseMatch</Command>
<Path>
<OS name="ALL">
<Location>%ProgramFiles%\mirc\mirc.ini</Location>
<Patterns>
<Pattern>[findtext2]->n</Pattern>
</Patterns>
</OS>
</Path>
</Object>

<Object>
<Type>File</Type>
<Command>EraseMatch</Command>
<Path>
<OS name="ALL">
<Location>%ProgramFiles%\mirc\mirc.ini</Location>
<Patterns>
<Pattern>[chanfolder]->n</Pattern>
</Patterns>
</OS>
</Path>
</Object>

</Objects> 
</Item> 
</Items> 
</Data> 
</CoEIA-Plugins>